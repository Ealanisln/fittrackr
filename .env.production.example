# Production Environment Variables
# Copy this file to .env.production and fill in the actual values

# ===================================
# DATABASE CONFIGURATION
# ===================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-postgres-password
POSTGRES_DB=fittrack
POSTGRES_PORT=5432

# PostgreSQL connection string (used by Prisma)
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB}?schema=public

# ===================================
# REDIS CONFIGURATION
# ===================================
REDIS_PASSWORD=your-secure-redis-password
REDIS_PORT=6379
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379

# ===================================
# AUTHENTICATION
# ===================================
# Generate with: openssl rand -base64 32
AUTH_SECRET=your-secret-key-here-min-32-chars-long

# Public URL where your API is accessible
AUTH_URL=https://api.fittrackr.me

# ===================================
# API CONFIGURATION
# ===================================
NODE_ENV=production
PORT=3001
API_PORT=3001

# Public URL where your frontend is accessible
CLIENT_URL=https://fittrackr.me

# ===================================
# FILE UPLOAD CONFIGURATION
# ===================================
UPLOAD_DIR=/app/uploads
MAX_FILE_SIZE=5242880

# ===================================
# AI/ML SERVICES
# ===================================
# OpenAI API key for OCR enhancement
OPENAI_API_KEY=sk-...

# ===================================
# THIRD-PARTY INTEGRATIONS
# ===================================
# Strava OAuth
STRAVA_CLIENT_ID=your-strava-client-id
STRAVA_CLIENT_SECRET=your-strava-client-secret

# Google Fit OAuth
GOOGLE_FIT_CLIENT_ID=your-google-fit-client-id
GOOGLE_FIT_CLIENT_SECRET=your-google-fit-client-secret

# ===================================
# WEB FRONTEND
# ===================================
WEB_PORT=80
VITE_API_URL=https://api.fittrackr.me
